{
    "manifest_version": 3,
    "name": "Disable YT Shorts",
    "description": "Hides youtube shorts.",
    "version": "1.0",
    "icons": {
        "16": "images/disable-yt-shorts-icon-16.png",
        "32": "images/disable-yt-shorts-icon-32.png",
        "48": "images/disable-yt-shorts-icon-48.png",
        "128": "images/disable-yt-shorts-icon-128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["scripts/main.js"]
        }
    ],
    "action": {
      "default_popup": "popups/blank.html",
      "default_icon": "images/disable-yt-shorts-icon-16.png"
    }
}